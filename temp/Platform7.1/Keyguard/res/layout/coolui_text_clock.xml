<com.android.keyguard.CoolUITextClock xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextClock
        android:id="@+id/textclock_hour"
        style="@style/widget_big_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="@dimen/bottom_text_spacing_digital"
        android:layout_marginTop="@dimen/bottom_text_spacing_digital"
        android:format12Hour="@string/keyguard_widget_12_hours_format"
        android:format24Hour="@string/keyguard_widget_24_hours_format"
        android:singleLine="true"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/textclock_separater"
        style="@style/widget_big_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="@dimen/bottom_text_spacing_digital"
        android:layout_marginTop="@dimen/bottom_text_spacing_digital"
        android:singleLine="true"
        android:textColor="#ffffffff" />

    <TextClock
        android:id="@+id/textclock_minute"
        style="@style/widget_big_thin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginBottom="@dimen/bottom_text_spacing_digital"
        android:layout_marginTop="@dimen/bottom_text_spacing_digital"
        android:format12Hour="@string/keyguard_widget_12_hours_format"
        android:format24Hour="@string/keyguard_widget_24_hours_format"
        android:singleLine="true"
        android:textColor="#aaffffff" />

</com.android.keyguard.CoolUITextClock>