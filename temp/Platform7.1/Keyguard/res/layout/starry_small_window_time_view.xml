<?xml version="1.0" encoding="utf-8"?>
<com.android.covermode.StarrySmallWindowTimeView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/starry_small_window_status_view"
    android:gravity="start"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingTop="10dp" >

    <TextClock
        android:id="@+id/starry_small_window_clock_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_text_spacing_digital"
        android:fontFamily="sans-serif-thin"
        android:format12Hour="@string/keyguard_widget_12_hours_format"
        android:format24Hour="@string/keyguard_widget_24_hours_format"
        android:singleLine="true"
        android:textColor="@color/clock_white"
        android:textSize="68sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal" >

        <TextClock
            android:id="@+id/starry_small_window_date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/clock_white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/starry_small_window_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/clock_white"
            android:textSize="13sp"
            android:visibility="gone" />
    </LinearLayout>

</com.android.covermode.StarrySmallWindowTimeView>