<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preference_double_line_distance"
    android:layout_gravity="right|center_vertical"
    android:background="@color/yl_list_selector_background_color"
    android:clickable="true"
    android:onClick="onClick"
    android:orientation="vertical" >

    <ImageView 
         android:id="@+id/package_list_divider"
         android:layout_width="fill_parent" 
         android:layout_height="1px" 
         android:src="@color/yl_list_content_line_color"
         android:paddingLeft="@dimen/preference_line_padding_left"
         android:paddingRight="@dimen/preference_line_padding_left" />
    
     <RelativeLayout 
             android:id="@+id/package_list_content"
             android:layout_width="match_parent"
             android:layout_height="@dimen/preference_double_line_distance"
             android:layout_gravity="right|center_vertical"
             android:orientation="horizontal"
             android:paddingLeft="@dimen/preference_padding_left"
             android:paddingRight="@dimen/preference_padding_left">

             <LinearLayout
                 android:id="@+id/one_switchnet_button_layout0"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/preference_double_line_distance"
                 android:gravity="left|center_vertical"
                 android:orientation="horizontal"
                 android:layout_alignParentLeft="true" >

                 <ImageView
                     android:id="@+id/app_icon"
                     android:layout_width="40dp"
                     android:layout_height="40dp"
                     android:layout_gravity="center_vertical"
                     android:scaleType="centerInside"/>
                     <!-- android:src="@drawable/icon"  -->

                 <Space
                     android:layout_width="16dp"
                     android:layout_height="@dimen/preference_double_line_distance" />

                 <ImageView
                     android:id="@+id/app_icon2"
                     android:layout_width="@dimen/preference_double_line_distance"
                     android:layout_height="@dimen/preference_double_line_distance"
                     android:scaleType="center"
                     android:visibility="gone" />

                 <LinearLayout
                     android:id="@+id/package_list_app"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/preference_double_line_distance"
                     android:gravity="left|center_vertical"
                     android:orientation="vertical" >

                     <TextView
                         android:id="@+id/app_name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="left|bottom"
                         android:textColor="#FF0C0C0C"
                         android:textSize="16sp"
                         android:paddingRight="32dp"
                         android:singleLine="true" />

                     <TextView
                         android:id="@+id/app_status"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="left|top"
                         android:text="@string/midle_sign"
                         android:textColor="#FF7B7B7B"
                         android:textSize="14sp"
                         android:singleLine="true"
                         android:maxWidth="200dp" />
                 </LinearLayout>

             <TextView
                 android:id="@+id/app_package"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center_vertical"
                 android:visibility="gone" />
            </LinearLayout>
         
           <LinearLayout
                 android:id="@+id/package_list_right"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/preference_double_line_distance"
                 android:orientation="horizontal"
                 android:layout_weight="1"
                 android:layout_alignParentRight="true" >

                 <!--
                Space
                android:layout_width="16dp"
                android:layout_height="54dp" /
                 -->

                 <LinearLayout
                     android:id="@+id/one_switchnet_button_layout0"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical" >

                     <CheckBox
                         android:id="@+id/sub_switch_widget0"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         
                         android:button="@null"
                         android:clickable="true"
                         android:drawableRight="@drawable/yl_btn_check_holo_light"
                         android:focusable="false"
                         android:paddingLeft="16dp"
                         android:paddingRight="0dp" />
                 </LinearLayout>

                 <LinearLayout
                     android:id="@+id/one_switchnet_button_layout1"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:orientation="vertical"  >

                     <CheckBox
                         android:id="@+id/sub_switch_widget1"
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:button="@null"
                         android:clickable="true"
                         android:drawableRight="@drawable/yl_btn_check_holo_light"
                         android:focusable="false"
                         android:paddingLeft="16dp"
                         android:paddingRight="0dp"
                         android:visibility="gone" />
                 </LinearLayout>
                 <LinearLayout
                     android:id="@+id/preference_detail_next_black_l"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:gravity="center_vertical"
                     android:orientation="vertical" >
                     <ImageView
                         android:id="@+id/preference_detail_next_black"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:scaleType="centerInside"
                         android:src="@drawable/preference_detail_next_black"
                         android:visibility="gone" />
             </LinearLayout>
                 <View
                     android:id="@+id/preference_detail_next_black__divider"
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:visibility="gone" />
           </LinearLayout>
           
        </RelativeLayout>
     
       
</LinearLayout>
