<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.QuickSettingsItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="56dp">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    >

	     <com.android.systemui.statusbar.phone.QuickSettingsItemViewSub
	         android:id="@+id/dual_first"
	         android:layout_width="wrap_content"
	         android:layout_height="13dp"
	         android:orientation="horizontal" >

	         <ImageView
	             android:id="@+id/icon"
	             android:layout_width="@dimen/yulong_quick_settings_width"
	             android:layout_height="40dp"
	             android:background="@drawable/ic_qs_background"
	             android:src="@drawable/quicksettings_more" />

	         <Space
	             android:layout_width="3dp"
	             android:layout_height="3dp" />
	     </com.android.systemui.statusbar.phone.QuickSettingsItemViewSub>
	    
   	    <com.android.systemui.statusbar.phone.QuickSettingsItemViewSub
   	        android:id="@+id/dual_secondary"
   	        android:layout_width="wrap_content"
   	        android:layout_height="13dp"
   	        android:orientation="horizontal" >

   	        <TextView
   	            android:id="@+id/text"
   	            android:layout_width="match_parent"
   	            android:layout_height="13dp"
   	            android:paddingTop="0dp"
   	            android:singleLine="true"
   	            android:text="@string/quicksettings_more"
   	            android:textAlignment="center"
   	            android:textSize="10dp" />

   	        <ImageView
   	            android:id="@+id/icon_secondary"
   	            android:layout_width="wrap_content"
   	            android:layout_height="13dp"
   	            android:clickable="false"
   	            android:paddingLeft="1dp"
   	            android:src="@drawable/qs_dual_tile_caret"
   	            android:visibility="gone" />
   	    </com.android.systemui.statusbar.phone.QuickSettingsItemViewSub>
	    
	</LinearLayout>
</com.android.systemui.statusbar.phone.QuickSettingsItemView>

