<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.QuickSettingsItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"    
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:orientation="horizontal"
	    >
	    <FrameLayout
			android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
	        >
	    <ImageView 
	    	android:layout_width="@dimen/yulong_quick_settings_width"
	    	android:layout_height="@dimen/yulong_quick_settings_width"
	    	android:clickable="false"
	    	android:src="@drawable/quicksettings_config_item_bg"		        
	        />	        
	    <ImageView android:id="@+id/icon"
	    	android:layout_width="@dimen/yulong_quick_settings_width"
	    	android:layout_height="@dimen/yulong_quick_settings_width"
	    	android:src="@drawable/quicksettings_more"
	    	android:background="@drawable/ic_qs_background"/>	
	    <ImageView 
	    	android:layout_width="@dimen/yulong_quick_settings_width"
	    	android:layout_height="@dimen/yulong_quick_settings_width"
	    	android:clickable="false"
	    	android:visibility="gone"
	    	android:src="@drawable/quicksettings_config_item_fg"		        
	        />
	    </FrameLayout>
	    <Space 
	    	android:layout_width="16dp"
	    	android:layout_height="16dp"  	        
	        />

	    <com.android.systemui.statusbar.phone.QuickSettingsItemViewSub
	        android:id="@+id/dual_secondary"
	        android:layout_width="wrap_content"
	        android:layout_height="13dp"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:singleLine="true"
	            android:textColor="#0D0D0D"
	            android:textSize="16dp" />

	        <ImageView
	            android:id="@+id/icon_secondary"
	            android:layout_width="wrap_content"
	            android:layout_height="13dp"
	            android:clickable="false"
	            android:paddingLeft="1dp"
	            android:src="@drawable/qs_dual_tile_caret"
	            android:visibility="gone" />
	    </com.android.systemui.statusbar.phone.QuickSettingsItemViewSub>

	</LinearLayout>
</com.android.systemui.statusbar.phone.QuickSettingsItemView>

