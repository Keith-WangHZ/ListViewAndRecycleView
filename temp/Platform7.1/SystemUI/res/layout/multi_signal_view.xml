<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView
    android:id="@+id/sim_card_absent"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/stat_sys_no_sim"
    android:visibility="visible" />
<FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"	
	android:id="@+id/sim_card_isready"
	android:visibility="gone">    
<ImageView
    android:id="@+id/offline_type"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/stat_sys_signal_null"
    android:visibility="gone" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"	
	android:id="@+id/signal_isready"
	android:visibility="visible">
<ImageView
    android:id="@+id/technology"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone" />	
    <FrameLayout
        android:id="@+id/mode_0"
        android:layout_gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signal_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0000FF00"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp" />            
            <FrameLayout
                android:layout_width="wrap_content"
                android:background="#00FF0000"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp" >
                <ImageView
                    android:id="@+id/signal_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp" />
				<ImageView
				    android:id="@+id/roaming_mode_0"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="top"
				    android:background="#000000FF"
				    android:layout_marginLeft="0dp"
				    android:layout_marginTop="0dp" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/mode_1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:visibility="gone" >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:layout_marginTop="1dp" >

            <TableRow>

                <ImageView
                    android:id="@+id/signal_type_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/signal_level_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/signal_type_slave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/signal_level_slave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/roaming_mode_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp" />
    </FrameLayout>    
</LinearLayout>
</FrameLayout>	
</LinearLayout>