<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.QuickSettingsItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"  
	    android:orientation="horizontal"      
        >
        <LinearLayout
		    android:layout_width="80dp"
		    android:layout_height="90dp"
		    android:gravity="center_horizontal"
		    android:orientation="vertical"
		    >
        
         <com.android.systemui.statusbar.phone.QuickSettingsItemViewSub
		        android:id="@+id/dual_first"
		        android:layout_width="match_parent"
		        android:layout_height="57dp"
		        android:clickable="false"
		        android:gravity="center_vertical|center_horizontal"
		        android:orientation="horizontal" >

		        <FrameLayout
		            android:layout_width="@dimen/yulong_quick_settings_width"
		            android:layout_height="40dp" >

		            <ImageView
		                android:layout_width="@dimen/yulong_quick_settings_width"
		                android:layout_height="40dp"
		                android:clickable="false"
		                android:src="@drawable/quicksettings_config_item_bg"
		                android:visibility="gone" />

		            <ImageView
		                android:id="@+id/icon"
		                android:layout_width="@dimen/yulong_quick_settings_width"
		                android:layout_height="40dp"
		                android:background="@drawable/ic_qs_background"
		                android:src="@drawable/quicksettings_more" />

		            <ImageView
		                android:layout_width="@dimen/yulong_quick_settings_width"
		                android:layout_height="40dp"
		                android:clickable="false"
		                android:src="@drawable/quicksettings_config_item_fg"
		                android:visibility="gone" />
		        </FrameLayout>
		    </com.android.systemui.statusbar.phone.QuickSettingsItemViewSub>
		     
		     <com.android.systemui.statusbar.phone.QuickSettingsItemViewSub
                android:id="@+id/dual_secondary"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:maxWidth="70dp"
                    android:layout_height="13dp"
                    android:paddingTop="0dp"
                    android:singleLine="true"
                    android:text="@string/quicksettings_more"
                    android:textAlignment="center"
                    android:textColor="#0D0D0D"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/icon_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:paddingLeft="1dp"
                    android:src="@drawable/qs_dual_tile_caret"
                    android:visibility="gone" />
            </com.android.systemui.statusbar.phone.QuickSettingsItemViewSub>
          </LinearLayout>  
    </LinearLayout>
</com.android.systemui.statusbar.phone.QuickSettingsItemView>