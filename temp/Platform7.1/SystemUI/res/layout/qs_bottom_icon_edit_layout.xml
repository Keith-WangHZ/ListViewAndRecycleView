<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="72dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/icon_preview_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/icon_preview_title"
            android:layout_width="wrap_content"
            android:layout_height="21.5dp"
            android:layout_marginLeft="21.5dp"
            android:padding="3dp"
            android:text="@string/bottom_icon_edit_title"
            android:textColor="#ff808080"
            android:textSize="12dp" />

        <GridLayout
            android:id="@+id/icon_preview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="21.5dp"
            android:layout_marginRight="21.5dp"
            android:columnCount="4"
            android:rowCount="2" >

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/quick_settings_flashlight_label"
                    android:src="@drawable/ic_qs_flashlight_off" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/quick_settings_flashlight_label"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/qs_label_calculator"
                    android:src="@drawable/ic_qs_calculator_off" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/qs_label_calculator"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/qs_label_blaster"
                    android:src="@drawable/ic_qs_blaster_off" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/qs_label_blaster"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/qs_label_pay_verse"
                    android:src="@drawable/ic_qs_pay_verse" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:text="@string/qs_label_pay_verse"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginBottom="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>
            
            <!--LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textColor="@android:color/black"
                    android:textSize="10sp" />
            </LinearLayout-->

            <LinearLayout
                android:layout_width="@dimen/bottom_icon_editor_preview_icon_width"
                android:layout_height="@dimen/bottom_icon_editor_preview_icon_height"
                android:layout_margin="@dimen/bottom_icon_editor_preview_icon_margin_start"
                android:layout_marginTop="1.5dp"
                android:background="@drawable/bottom_icon_editor_background"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:maxEms="5"
                    android:textColor="@android:color/black"
                    android:textSize="10dp" />
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/icon_preview_hint"
            android:layout_width="wrap_content"
            android:layout_height="21.5dp"
            android:layout_marginLeft="21.5dp"
            android:padding="3dp"
            android:text="@string/bottom_icon_edit_hint"
            android:textColor="#ff808080"
            android:textSize="12sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/choose_app_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#1e000000"
        android:dividerHeight="1px" >
    </ListView>

</LinearLayout>