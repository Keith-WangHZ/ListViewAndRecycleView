<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.statusbar.phone.QuickSettingsItemView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="91dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
         android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/yulong_quick_settings_height"
            android:layout_height="@dimen/yulong_quick_settings_height"
            android:background="@drawable/ic_qs_background"
            android:src="@drawable/quicksettings_more" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:clickable="true"
            android:drawablePadding="3dp"
            android:gravity="center_horizontal|center_vertical"
            android:singleLine="true"
            android:text="@string/quicksettings_more"
            android:textColor="#ffffff"
            android:textSize="12dp" />
    </LinearLayout>

</com.android.systemui.statusbar.phone.QuickSettingsItemView>